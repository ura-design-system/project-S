{
  "name": "postcss-merge-rules-plus",
  "version": "2.0.0",
  "description": "PostCSS plugin for combining css rules (selectors) that have fully/partially identical declarations",
  "main": "dist/index.js",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "postcss-merge-rules-plus"
  ],
  "scripts": {
    "test": "jest --coverage && eslint ."
  },
  "author": "HeyMarco <31385284+heyymarco@users.noreply.github.com>",
  "license": "MIT",
  "repository": "heyymarco/postcss-merge-rules-plus",
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "browserslist": "^4.19.1",
    "caniuse-api": "^3.0.0",
    "cssnano-util-same-parent": "^4.0.1",
    "postcss-selector-parser": "^6.0.9"
  },
  "devDependencies": {
    "@types/caniuse-api": "^3.0.2",
    "@types/jest": "^27.4.0",
    "clean-publish": "^3.4.2",
    "eslint": "^8.0.1",
    "eslint-plugin-jest": "^25.2.2",
    "jest": "^27.3.1",
    "postcss": "^8.3.11",
    "ts-jest": "^27.1.3"
  },
  "peerDependencies": {
    "postcss": "^8.3.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "preset": "ts-jest/presets/js-with-ts"
  }
}
